{% extends 'base.html.twig' %}

{% block body %}
    <div class="content-body">
        <ul class="list-unstyled">
            <li><a href="/menu">Retour au back</a></li>
        </ul>
        <div class="container-fluid mt-3">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="mb-3">
                                <form
                                        action="{{ path('app_user_back') }}" method="get" class="form-inline">
                                </form>
                            </div>
                            <div class="active-member">
                                <div class="table-responsive">
                                    <table class="table table-xs mb-0">
                                        <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Nom</th>
                                            <th>Prenom</th>
                                            <th>Adresse</th>
                                            <th>Email</th>
                                            <th>NumTel</th>
                                            <th>Profession</th>
                                            <th>Password</th>
                                            <th>CIN</th>
                                            <th>Actions</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for author in authors %}
                                            <tr>
                                                <td>{{ author.getId() }}</td>
                                                <td>{{ author.getNom() | upper }}</td>
                                                <td>{{ author.getPrenom() }}</td>
                                                <td>{{ author.getAdresse() }}</td>
                                                <td>{{ author.getEmail() }}</td>
                                                <td>{{ author.getNumTel() }}</td>
                                                <td>{{ author.getProfession() }}</td>
                                                <td>{{ author.getPassword() }}</td>
                                                <td>{{ author.getCIN() }}</td>
                                                <td>
                                                    <a href="{{ path('app_user_back_delete', {'id': author.getId()}) }}"><i class="fa">&#xf014;</i></a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                                <nav class="mt-4" aria-label="Page navigation example">
                                    <ul class="pagination justify-content-center">
                                        {{ knp_pagination_render(authors) }}
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
